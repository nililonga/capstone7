@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>ASP.NET</h1>
    <p class="lead">ASP.NET is a free web framework for building great Web sites and Web applications using HTML, CSS and JavaScript.</p>
    <p><a href="https://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>
</div>

<table>
    <tr>
        <th>ItemID</th>
        <th>Description</th>
        <th>Actions</th>
        </tr>
        @foreach (EntityLesson.Models.Item i in ViewBag.Items)
        {
            <tr>
                <td>@ViewBag.Items[i].ItemID</td>
                <td> @ViewBag.Items[i].Description</td>
                <td>@ViewBag.Items[i].Email</td>
                <td>/Home/Contact?</td>
                </tr>
        }

    </table>

<form action="/Home/About">
    <input type="text" name="Description"/>
    <input type="email" name="Email" />
    <input type="submit" value="add item" />

</form>

<form action="/Home/Contact">
    <input type="number" name="ID" />
    
    <input type="submit" value="Remove Item" />

</form>

<form action="/Home/ItemView">
    <input type="number" name="Email" />

    <input type="submit" value="List Items" />

</form>